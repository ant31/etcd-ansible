#!/bin/bash

export endpoints={{etcd_clusters[etcd_cluster_name].etcd_access_addresses}}
{{ bin_dir }}/etcdctl --endpoints=$endpoints \
  --cacert {{etcd_clusters[etcd_cluster_name].etcd_cert_paths.server.ca}} \
  --cert {{etcd_clusters[etcd_cluster_name].etcd_cert_paths.server.cert}} \
  --key {{etcd_clusters[etcd_cluster_name].etcd_cert_paths.server.key}} "$@"
