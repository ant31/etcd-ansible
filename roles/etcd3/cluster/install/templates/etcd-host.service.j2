[Unit]
Description={{etcd_name}}
After=network.target

[Service]
Type=notify
User={{ etcd_user.name }}
Group={{ etcd_user.name }}
EnvironmentFile=/etc/etcd/{{etcd_name}}.env
ExecStart={{ bin_dir }}/etcd --config-file=/etc/etcd/{{etcd_name}}-conf.yaml --experimental-initial-corrupt-check
NotifyAccess=all
Restart=always
TimeoutStartSec=60s
RestartSec=15s
LimitNOFILE=40000

[Install]
WantedBy=multi-user.target
